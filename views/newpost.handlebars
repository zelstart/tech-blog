<div class="container my-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header cstm-light-text">
                    <h2 class="card-title mb-0">Create a New Blog Post</h2>
                </div>
                <div class="card-body">
                    <form action="/newpost" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Enter the title">
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-label">Body</label>
                            <textarea class="form-control" id="body" name="body" rows="6" placeholder="Write your post"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary cstm-btn">Submit Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
