<div class="container mt-5 p-3 rounded-top cstm-light-text card-border">
    <div class="row justify-content-center">
        <div class="col-12 mb-2">
            <h2>Login</h2>
        </div>
    </div>
</div>

<div class="container lg-card-body rounded-bottom p-5 mb-4">
    <div class="row justify-content-center">
            <!-- Login Form -->
        <form class="col-8 login-form">
            <div class="mb-3">
                <label for="username-login" class="form-label">Username</label>
                <input type="text" class="form-control" placeholder="john_doe" id="username-login" required>
            </div>
            <div class="mb-3">
                <label for="password-login" class="form-label">Password</label>
                <input type="password" placeholder="password" class="form-control" id="password-login" required>
            </div>
            <button type="submit" id="login-button" class="cstm-btn btn btn-primary">Login</button>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>